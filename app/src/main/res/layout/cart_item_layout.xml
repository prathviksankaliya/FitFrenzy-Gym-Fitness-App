<?xml version="1.0" encoding="utf-8"?>
<!-- cart_item_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/fitnessImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Fitness Image"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/splashdemo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/fitnessTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitness Title"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/caloriesGainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories Gain: 100"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Add a remove button or any other action button here if needed -->

</LinearLayout>
